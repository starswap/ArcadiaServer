{% extends "accountbase.jinja2" %}

{% block header %}<link rel="stylesheet" href="{{url_for('app_bp.static', filename='accountStyle.css')}}">{% endblock %}

{% block typename %}Register{% endblock %}
{% block typesubtext %}Register to start playing{% endblock %}

{% block forms %}

    <form method="POST">
        <label> Username </label><br>
        <input type="text" class="general" name="username" required><br><br>
        <label> Password </label><br>
        <input type="password" class="general" name="password" required><br><br>
        <input id="submit" type="submit" value="Submit"><br><br>
    </form> 

{% endblock %}